# Compiler: GCC 11
CC = g++ -m64 -std=c++17
RM = rm

BIN_DIR = bin
SRC_DIR = src

OCL_INC = -IKhronos
OCL_LIB = -L/usr/lib/x86_64-linux-gnu/ -lOpenCL

BOINC_DIR = ../boinc
BOINC_INC = -I$(BOINC_DIR) -I$(BOINC_DIR)/api -I$(BOINC_DIR)/lib
BOINC_LIB = -L$(BOINC_DIR)/api -L$(BOINC_DIR)/lib -lboinc_api -lboinc -lpthread
BOINC_LIB_OCL = -lboinc_opencl

CFLAGS = -DBOINC $(BOINC_INC) -Wall -Wextra -ffinite-math-only -frename-registers
FLAGS_CPU = -O3 -fopenmp
FLAGS_GPU = -O3 -DGPU

OBJS_CPU = main.o transform_sse2.o transform_sse4.o transform_avx.o transform_fma.o transform_512.o
OBJS_GPU = maing.o transform_ocl.o
DEPS_MAIN = $(SRC_DIR)/genefer.h $(SRC_DIR)/transform.h $(SRC_DIR)/file.h $(SRC_DIR)/gint.h $(SRC_DIR)/pio.h  $(SRC_DIR)/boinc.h
DEPS_TRANSFORM_CPU = $(SRC_DIR)/transformCPU.h $(SRC_DIR)/transform.h $(SRC_DIR)/gint.h $(SRC_DIR)/fp16_80.h
DEPS_TRANSFORM_GPU = $(SRC_DIR)/transformGPU.h $(SRC_DIR)/transform.h $(SRC_DIR)/gint.h $(SRC_DIR)/ocl.h

EXEC_CPU = $(BIN_DIR)/genefer22
EXEC_GPU = $(BIN_DIR)/genefer22g

.PHONY: all clean_obj rebuild

all: $(EXEC_CPU) $(EXEC_GPU)

clean_obj:
	del $(OBJS_CPU) $(OBJS_GPU)

rebuild: clean_obj all

main.o: $(SRC_DIR)/main.cpp $(DEPS_MAIN)
	$(CC) $(CFLAGS) $(FLAGS_CPU) -c $< -o $@

maing.o: $(SRC_DIR)/main.cpp $(DEPS_MAIN)
	$(CC) $(CFLAGS) $(FLAGS_GPU) $(OCL_INC) -c $< -o $@

transform_sse2.o: $(SRC_DIR)/transform_sse2.cpp $(DEPS_TRANSFORM_CPU)
	$(CC) $(CFLAGS) $(FLAGS_CPU) -fprefetch-loop-arrays -mtune=core2 -c $< -o $@

transform_sse4.o: $(SRC_DIR)/transform_sse4.cpp $(DEPS_TRANSFORM_CPU)
	$(CC) $(CFLAGS) $(FLAGS_CPU) -fprefetch-loop-arrays -msse4.1 -mtune=westmere -c $< -o $@

transform_avx.o: $(SRC_DIR)/transform_avx.cpp $(DEPS_TRANSFORM_CPU)
	$(CC) $(CFLAGS) $(FLAGS_CPU) -fprefetch-loop-arrays -mavx -mtune=ivybridge -c $< -o $@

transform_fma.o: $(SRC_DIR)/transform_fma.cpp $(DEPS_TRANSFORM_CPU)
	$(CC) $(CFLAGS) $(FLAGS_CPU) -fprefetch-loop-arrays -mavx -mfma -c $< -o $@

transform_512.o: $(SRC_DIR)/transform_512.cpp $(DEPS_TRANSFORM_CPU)
	$(CC) $(CFLAGS) $(FLAGS_CPU) -fprefetch-loop-arrays -mavx512f -c $< -o $@

transform_ocl.o: $(SRC_DIR)/transform_ocl.cpp $(DEPS_TRANSFORM_GPU)
	$(CC) $(CFLAGS) $(FLAGS_GPU) $(OCL_INC) -c $< -o $@

$(EXEC_CPU): $(OBJS_CPU)
	$(CC) $(FLAGS_CPU) -static $^ -lgmp $(BOINC_LIB) -o $@

$(EXEC_GPU): $(OBJS_GPU)
	$(CC) $(FLAGS_GPU) -static-libgcc -static-libstdc++ $^ -lgmp $(BOINC_LIB) $(BOINC_LIB_OCL) $(OCL_LIB) -o $@
